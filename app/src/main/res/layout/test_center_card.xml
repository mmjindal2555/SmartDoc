<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00aaaaaa">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="4dp"
        android:elevation="4dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/urlTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/manufacturerTextView"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/medPrice"
                android:layout_alignTop="@+id/testPrice"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp"
                android:text="Werbsite URL" />

            <TextView
                android:id="@+id/manufacturedFixedTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Certified By - "
                android:textSize="12dp"
                android:layout_below="@+id/centreNameTV"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/centreNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of Centre"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/com_facebook_button_send_background_color" />

            <TextView
                android:id="@+id/testPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/medNameTV"
                android:text="\u20B9 20"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/certificatesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignLeft="@+id/manufacturedFixedTV"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/manufacturedFixedTV"
                android:text="Certifications"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/com_facebook_button_send_background_color_pressed"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/addressTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/manufacturerTextView"
                android:layout_alignLeft="@+id/manufacturerTextView"
                android:layout_marginTop="3dp"
                android:text="Address" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>