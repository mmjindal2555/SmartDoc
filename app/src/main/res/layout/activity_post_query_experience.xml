<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">


    <EditText
        android:id="@+id/queryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your query here ..."
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="60dp" />


    <Button
        android:id="@+id/postButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="POST"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/queryText"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="TAGS" />

        <com.silk.smartdoc.View.MultiSpinnerSearch
            android:id="@+id/searchMultiSpinnerLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:hintText="TAGS" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:id="@+id/linearLayout4">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:text="Other Tags?"
            android:textSize="14dp" />

        <Switch
            android:id="@+id/otherTagSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:layout_toEndOf="@+id/textView2"
            android:layout_weight="0.44"
            android:checked="false"
            android:textSize="15dp" />


        <EditText
            android:id="@+id/otherTagEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:ems="10"
            android:enabled="false"
            android:hint="specify,tags,like,this"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textIsSelectable="false"
            android:textSize="15dp" />




    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/postButton"
        android:layout_marginTop="24dp" />


</RelativeLayout>