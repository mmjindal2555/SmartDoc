<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/gradient"
    android:id="@+id/signupLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SmartDoc"
        android:id="@+id/sdLogo"
        android:typeface="normal"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sdLogo"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout2">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nameEditText"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:background="#22ffffff"
            android:textColorHint="#aaffffff"
            android:hint="Name"
            android:textSize="15dp"
            android:textIsSelectable="false"
            android:textColor="#ddffffff" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dobEditText"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:background="#22ffffff"
            android:hint="Date of Birth"
            android:textColorHint="#aaffffff"
            android:textSize="15dp"
            android:textIsSelectable="false"
            android:textColor="#ddffffff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:id="@+id/maleRadioButton"
                android:layout_weight="1"
                android:textColor="#ccffffff"
                android:layout_gravity="center"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:id="@+id/femaleRadioButton"
                android:layout_weight="1"
                android:textColor="#ccffffff"
                android:layout_gravity="center_horizontal"
                android:checked="false" />
        </LinearLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/usernameEditText"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:background="#22ffffff"
            android:hint="Email address (Username)"
            android:textColorHint="#aaffffff"
            android:textSize="15dp"
            android:textIsSelectable="false"
            android:textColor="#ddffffff" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/passwordEditText"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:background="#22ffffff"
            android:textColorHint="#aaffffff"
            android:hint="Password"
            android:textSize="15dp"
            android:textIsSelectable="false"
            android:textColor="#ddffffff" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/confirmPwEditText"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:background="#22ffffff"
            android:textColorHint="#aaffffff"
            android:hint="Confirm Password"
            android:textSize="15dp"
            android:textIsSelectable="false"
            android:textColor="#ddffffff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="bottom">

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/isDocSwitch"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="3dp"
                    android:checked="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Doctor?"
                    android:id="@+id/textView2"
                    android:textSize="14dp"
                    android:textColor="#ccffffff"
                    android:layout_alignParentBottom="true"
                    android:layout_toStartOf="@+id/isDocSwitch"
                    android:layout_marginRight="7dp"
                    android:layout_alignBaseline="@+id/isDocSwitch" />
            </RelativeLayout>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/regNoEditText"
                android:layout_marginTop="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:background="#22ffffff"
                android:textColorHint="#aaffffff"
                android:hint="Registration Number"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:layout_marginLeft="3dp"
                android:textSize="15dp"
                android:textIsSelectable="false"
                android:textColor="#ddffffff" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Verify E-Mail Address"
        android:id="@+id/verifyEmailButton"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="30dp"
        android:layout_alignEnd="@+id/linearLayout2"
        android:background="#44ffffff"
        android:textColor="#ffeaf9" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signUpButton"
        android:layout_below="@+id/verifyEmailButton"
        android:layout_centerHorizontal="true"
        android:textColor="#dd5a25"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

</RelativeLayout>
